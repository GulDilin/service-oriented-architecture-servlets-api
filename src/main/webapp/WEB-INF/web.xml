<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Service Oriented Architecture 1</display-name>

  <servlet>
    <servlet-name>ErrorController</servlet-name>
    <servlet-class>guldilin.controller.ErrorController</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ValidationErrorController</servlet-name>
    <servlet-class>guldilin.controller.ValidationErrorController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ErrorController</servlet-name>
    <url-pattern>/error</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ValidationErrorController</servlet-name>
    <url-pattern>/error_validation</url-pattern>
  </servlet-mapping>

  <error-page>
    <exception-type>javax.validation.ConstraintViolationException</exception-type>
    <location>/error_validation</location>
  </error-page>

  <error-page>
    <exception-type>java.io.IOException</exception-type >
    <location>/error</location>
  </error-page>

  <error-page>
    <exception-type>javax.persistence.NoResultException</exception-type >
    <location>/error</location>
  </error-page>

  <error-page>
    <exception-type>java.lang.Throwable</exception-type >
    <location>/error</location>
  </error-page>

</web-app>
